@{
    Layout = "_Layout";
    var req = Context.Request;
}

<h1 class="mb-4">Bicycle Products</h1>

<div class="container mt-4">

    <div class="row mb-3">
        <div class="col">
            <!-- Example: Use fixed url or req.Path/query if needed -->
            <p class="text-muted">
                You are viewing: <strong>@req.Path</strong>
            </p>
        </div>
    </div>

    <div class="row">

        <!-- Bike 1 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="~/images/bike1.jpg" class="card-img-top" alt="Bike 1" />
                <div class="card-body">
                    <h5 class="card-title">Crimson Roadster</h5>
                    <p class="card-text">Speed focused carbon-frame bicycle.</p>
                    <p class="fw-bold">₹24,999</p>
                </div>
            </div>
        </div>

        <!-- Bike 2 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="~/images/bike2.jpg" class="card-img-top" alt="Bike 2" />
                <div class="card-body">
                    <h5 class="card-title">Trail Conqueror</h5>
                    <p class="card-text">Mountain bike with premium suspension.</p>
                    <p class="fw-bold">₹29,499</p>
                </div>
            </div>
        </div>

        <!-- Bike 3 -->
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="~/images/bike3.jpg" class="card-img-top" alt="Bike 3" />
                <div class="card-body">
                    <h5 class="card-title">Urban Glide</h5>
                    <p class="card-text">City commuter with comfort geometry.</p>
                    <p class="fw-bold">₹14,999</p>
                </div>
            </div>
        </div>

    </div>

</div>
